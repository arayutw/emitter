{
    "compilerOptions": {
        "target": "ES6",
        "sourceMap": true,
        "mapRoot": "./",
        "moduleResolution": "node",
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "declarationDir": "./dist/scripts",
        "declaration": true,
        "lib": [
            "dom",
            "ES6"
        ]
    },
    "include": [
        "src/scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}